{
  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "Mocha Debug",
    "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
    "args": [
      "--reporter",
      "dot",
      "--slow",
      "5000",
      "--colors",
      "${workspaceFolder}/test/**/*.spec.js"
    ],
    "internalConsoleOptions": "openOnSessionStart"
  }]
}